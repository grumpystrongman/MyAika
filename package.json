{
  "name": "myaika",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/server & npm run dev -w apps/web",
    "dev:server": "npm run dev -w apps/server",
    "dev:web": "npm run dev -w apps/web",
    "dev:web:https": "npm run dev:https -w apps/web",
    "dev:ipad": "powershell -ExecutionPolicy Bypass -File scripts/dev_ipad.ps1",
    "tts": "node apps/server/scripts/tts_sample.js",
    "voice:smoke": "node apps/server/scripts/voice_smoke.js",
    "voice:test": "node apps/server/scripts/voice_fulltest.js",
    "aika": "node apps/server/cli/aika.js",
    "ingest:signals": "node apps/server/scripts/signals_ingest.js",
    "rag:backup": "node apps/server/scripts/backup_rag_drive.js",
    "rag:fts": "node apps/server/scripts/rebuild_rag_fts.js",
    "rag:sample": "node apps/server/scripts/rag_hybrid_sample.js",
    "desktop:sample": "node apps/server/scripts/desktop_sample.js",
    "test": "node --test apps/server/tests/*.test.js",
    "smoke": "node scripts/full_smoke_test.js",
    "ui:smoke": "node scripts/ui_smoke.js",
    "gptsovits": "node apps/server/scripts/start_gptsovits.js",
    "piper:voices": "powershell -ExecutionPolicy Bypass -File scripts/install_piper_voices.ps1",
    "live2d:import": "powershell -ExecutionPolicy Bypass -File scripts/import_live2d_samples.ps1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2"
  },
  "dependencies": {
    "tts": "^0.1.0"
  }
}
